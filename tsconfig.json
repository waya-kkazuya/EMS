{
    "extends": "@vue/tsconfig/tsconfig.json",
    "compilerOptions": {
      "baseUrl": ".",
      "paths": {
        "@/*": ["resources/js/*"]
      },
      "typeRoots": [ 
        "./node_modules/@types", 
        "./resources/js/@types" 
      ],
      // "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "types": ["vite/client"], 
    },
    "include": [
        "resources/js/**/*.ts", 
        // "resources/js/**/*.tsx", 
        "resources/js/**/*.d.ts", 
        "resources/js/**/*.vue", 
        "resources/js/micromodal.ts"
      ]
  }
  